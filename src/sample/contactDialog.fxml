<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.ContactDialogController"
            >

    <headerText>
        Add details of new contact
    </headerText>

    <content>
        <GridPane>
            <Label text="First Name" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="100"/>
            <TextField fx:id="first_name" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="100"/>

            <Label text="Last Name" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="100"/>
            <TextField fx:id="last_name" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="100"/>

            <Label text="Phone Number" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="phone_number" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

            <Label text="Notes" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="new_notes" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        </GridPane>
    </content>
</DialogPane>
